{
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--project-ref",
        "${env:SUPABASE_PROJECT_REF}",
        "--access-token",
        "${env:SUPABASE_ACCESS_TOKEN}"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "${env:SUPABASE_ACCESS_TOKEN}",
        "SUPABASE_PROJECT_REF": "${env:SUPABASE_PROJECT_REF}"
      }
    }
  }
}