{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "target": "ES2020",
    "declaration": true,
    "outDir": "./dist/node"
  },
  "include": ["vite.config.js", "src/main/**/*", "src/preload/**/*", "src/services/**/*", "src/utils/**/*"],
  "exclude": ["node_modules", "dist", "build", "src/renderer"]
}