{
	"appId": "com.edlingo.app",
	"appName": "EdLingo",
	"webDir": "dist",
	"server": {
		"androidScheme": "https",
		"cleartext": true
	},
	"android": {
		"allowMixedContent": true
	},
	"plugins": {
		"SplashScreen": {
			"launchShowDuration": 2000,
			"backgroundColor": "#0f172a",
			"showSpinner": true,
			"androidSpinnerStyle": "large",
			"spinnerColor": "#3b82f6"
		},
		"StatusBar": {
			"style": "dark",
			"backgroundColor": "#0f172a"
		},
		"Keyboard": {
			"resize": "body",
			"style": "dark",
			"resizeOnFullScreen": true
		}
	}
}
